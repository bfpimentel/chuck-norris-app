<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/facts_abl_search_term"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/spacing_medium"
            android:orientation="vertical"
            app:layout_scrollFlags="scroll|enterAlways">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/facts_tv_searching_for"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/facts_tv_searching_for" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/facts_tv_search_term"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_medium"
                android:textStyle="bold"
                tools:text="Food" />

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/facts_rv_facts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:overScrollMode="never"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        tools:itemCount="10"
        tools:listitem="@layout/facts_item_layout" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/facts_tv_first_access"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/spacing_medium"
        android:gravity="center"
        android:text="@string/facts_tv_first_access"
        android:visibility="gone" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/facts_tv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/spacing_medium"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:visibility="gone"
        tools:text="An error occurred.\nYou can tap here to try again."
        tools:visibility="gone" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/facts_tv_list_is_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/spacing_medium"
        android:gravity="center"
        android:text="@string/facts_tv_list_is_empty"
        android:visibility="gone" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/facts_mb_go_to_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/spacing_medium"
        android:layout_marginStart="@dimen/spacing_medium"
        app:backgroundTint="@color/colorAccent"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
        app:srcCompat="@android:drawable/ic_menu_search" />

    <include
        android:id="@+id/facts_loading"
        layout="@layout/loading_layout"
        tools:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
