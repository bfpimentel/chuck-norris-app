<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/share_iv_photo"
        android:layout_width="@dimen/share_photo_size"
        android:layout_height="@dimen/share_photo_size"
        app:srcCompat="@raw/chuck_norris_photo" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/share_tv_description"
        android:layout_width="@dimen/share_text_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/share_iv_photo"
        android:layout_marginTop="-16dp" />

</RelativeLayout>
